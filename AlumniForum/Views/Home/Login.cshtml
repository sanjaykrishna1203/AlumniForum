
@{
    ViewData["Title"] = "Login";

}



<body class="img js-fullheight">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/login-form-20/css/style.css">


    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section">Alumni Forum</h2>
            </div>
        </div>
        
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Have an account?</h3>
                        <form asp-controller="Home" asp-action="Login" class="signin-form">
                            <div class="form-group">
                                <input type="text" class="form-control" name="email" placeholder="Email" required>
                            </div>
                            <div class="form-group">
                                <input id="password-field" type="password" name="password" class="form-control" placeholder="Password" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary">
                                        Remember Me
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-50 text-md-right">
                                    <a href="#" style="color: #fff">Forgot Password</a>
                                </div>
                            </div>
                        </form>
                        <p class="w-100 text-center">&mdash; Don't have an Account &mdash;</p>
                        <form>
                            <div class="">
                                <div class="">
                                    <button style="width:100%;" asp-controller="Home" asp-action="Register" class="form-control btn btn-primary submit px-2">Register</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
    </div>

    <script src="~/login-form-20/js/bootstrap.min.js"></script>
    <script src="~/login-form-20/js/jquery.min.js"></script>
    <script src="~/login-form-20/js/main.js"></script>
    <script src="~/login-form-20/js/popper.js"></script>

</body>


